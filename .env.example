# -------------------------
# General Server Config
# -------------------------
NODE_ENV=development            # development | staging | production
PORT=5000                       # Express/Socket.IO server port

# -------------------------
# MongoDB Config
# -------------------------
MONGO_URI=mongodb://localhost:27017/ferry_wheel

# -------------------------
# Redis Config
# -------------------------
REDIS_URI=redis://localhost:6379

# -------------------------
# JWT / Auth Config
# -------------------------
JWT_SECRET=supersecretkey       # used for signing/verifying hosted app tokens
JWT_EXPIRY=1h                   # default token expiry for generated tokens

# -------------------------
# Hosted App Integration
# -------------------------
HOSTED_APP_API_URL=http://localhost:5000/api   # mock or real hosted app base URL
HOSTED_APP_API_KEY=changeme                     # auth key for backend â†” hosted app calls

# -------------------------
# Game Config
# -------------------------
ROUND_DURATION=30               # betting phase in seconds
REVEAL_DURATION=5               # reveal/winner announcement duration
COMPANY_PROFIT_PERCENT=10       # percentage of round profit reserved for company
RESERVE_WALLET_PERCENT=90       # remaining % that goes to user payouts
DEFAULT_MULTIPLIER=2            # fallback multiplier if box has no custom multiplier

# -------------------------
# Admin / Logging
# -------------------------
LOG_LEVEL=debug                 # debug | info | warn | error
ADMIN_EMAIL=admin@example.com   # notifications, errors
